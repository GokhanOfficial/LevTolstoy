# Server
PORT=3000
NODE_ENV=development
MAX_FILE_SIZE=50

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: custom base URL
OPENAI_FILENAME_MODEL=gpt-oss-120b  # Optional: model for filename generation

# Google Drive API (OAuth - PPTX/DOCX dönüşümü için)
# https://console.cloud.google.com/apis/credentials adresinden OAuth 2.0 Client ID oluşturun
GOOGLE_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_oauth_client_secret
# PDF dosyalarının yükleneceği Google Drive klasör ID'si (URL'deki son kısım)
GOOGLE_DRIVE_PDF_FOLDER_ID=
